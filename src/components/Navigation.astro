<link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
<body>
<header class="header">
    <a href="" class="logo"><img src="../../assets/spurlockLogo.png"></a>

    <input type="checkbox" id="check">
    <label for="check" class="icons">
        <i class="bx bx-menu" id="hamburger"></i>
        <i class="bx bx-x" id="close"></i>
    </label>

    <nav class="navbar">
        <a href="#" style="--i:0;">Home</a>
        <a href="#" style="--i:1;">Services</a>
        <a href="#" style="--i:2;">Design</a>
        <a href="#" style="--i:3;">Contact</a>
    </nav>
</header>
</body>
<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1.3rem 10%;
        background: #221F1F;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
    }

    .header::before {
        content: '';
        position: absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        z-index: -1;
    }

    img {
        max-width: 1.2rem;
    }

    .navbar a {
        font-size: 1.15rem;
        color: #F4F4F4;
        text-decoration: none;
        margin-left: 2.5rem;
         
    }

    #check {
        display: none;
    }

    .icons {
        position: absolute;
        right: 5%;
        font-size: 2.8rem;
        color: #6E6E6E;
        cursor: pointer;
        display: none;
    }

    /* Breakpoints */
    @media (max-width: 992px) {
        .header {
            padding: 1.3rem 5%;
        }
    }

    @media (max-width: 768px) {
        .icons {
            display: inline-flex;
        }

        #check:checked~.icons #hamburger {
            display:none;
        }

        #check:checked~.icons #close {
            display:block;
        }

        .icons #close {
            display: none;
        }

        .navbar {
            position: absolute;
            top:100%;
            left:0;
            width: 100%;
            height:0;
            background: rgba(0,0,0,.1);
            backdrop-filter: blur(50px);
            overflow:hidden;
            transition: .3s ease;
        }

        #check:checked~.navbar {
            height: 11.4rem;
        }

        .navbar a {
            display: block;
            font-size: 1rem;
            margin: 1.3rem 5%;
            transform: translateY(-50px);
            opacity: 0;
            transition: .3s ease;
        }

        #check:checked~.navbar a {
            transform: translateY(0);
            opacity: 1;
            transition-delay: calc(.04s * var(--i));
        }
    }

</style>
